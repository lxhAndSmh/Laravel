<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:paddingLeft="@dimen/space_16"
    android:paddingRight="@dimen/space_16"
    android:paddingBottom="@dimen/space_16"
    android:paddingTop="@dimen/space_35"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer_header_avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_avatar_default"
        />

    <RelativeLayout
        android:id="@+id/drawer_header_rl"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/drawer_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hi"
            android:textSize="@dimen/textSize_16"
            />

        <TextView
            android:id="@+id/drawer_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawer_header_name"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/textSize_14"
            android:text="592735892@163.com"
            />

        <ImageView
            android:id="@+id/drawer_header_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_logout"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/drawer_header_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/textSize_16"
        android:text="请扫码登录"
        android:gravity="center_vertical"
        />
</LinearLayout>